{
  "name": "devpay",
  "private": true,
  "version": "0.0.1",
  "description": "DevPay - Sistema de pagamento",
  "author": "Lucas Araujo",
  "license": "MIT",
  "engines": {
    "node": "16.14.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "test:unit": "cross-env NODE_ENV=test TEST_SCOPE=unit jest --passWithNoTests",
    "test:service": "cross-env NODE_ENV=test TEST_SCOPE=service jest --passWithNoTests",
    "test:database": "cross-env NODE_ENV=test TEST_SCOPE=database jest --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=test jest --watch --passWithNoTests",
    "test:cov": "cross-env NODE_ENV=test jest --coverage --passWithNoTests",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --passWithNoTests",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:test": "cross-env NODE_ENV=test ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:prod": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "env": "cross-env NODE_ENV=development docker-compose -f environment/docker-compose.yml --env-file .env.development",
    "env:init": "environment/init"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.7",
    "@nestjs/common": "^8.1.1",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.1.1",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/typeorm": "^8.0.3",
    "camelcase-keys": "^7.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "snakecase-keys": "^5.4.2",
    "typeorm": "0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.3",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.3.0",
    "prettier": "^2.4.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "testRunner": "jest-jasmine2",
    "verbose": true,
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "@shared/(.*)": "<rootDir>/src/shared/$1",
      "@shared": "<rootDir>/src/shared",
      "@accounts/(.*)": "<rootDir>/src/accounts/$1",
      "@accounts": "<rootDir>/src/accounts",
      "@payments/(.*)": "<rootDir>/src/payments/$1",
      "@payments": "<rootDir>/src/payments"
    }
  }
}
