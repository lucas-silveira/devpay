#!/bin/bash
DIR=$PWD/environment

# Docker-compose
docker-compose -f environment/docker/docker-compose.yml --env-file .env.development up -d

# Terraform
[ -e "$DIR/.terraform" ] || $DIR/terraform/cli init
$DIR/terraform/cli apply -auto-approve

echo "\nDevpay dependencies initialization finished ðŸŽ‰ðŸŽ‰ðŸŽ‰"